{
  "variables": {
    "ssh_host": "",
    "ssh_username": "",
    "ssh_password": "",
    "ssh_elasticsearch": "",
    "ssh_graphite": "",
    "ssh_icinga": ""
  },
  "provisioners": [
    {
      "type": "shell",
      "inline": [
      "sudo -S yum -y install wget",
      "wget http://dl.fedoraproject.org/pub/epel/6/x86_64/epel-release-6-8.noarch.rpm",
      "sudo -S rpm -Uvh epel-release-6*.rpm",
      "sudo -S yum -y install sshpass",
      "sshpass -p {{user `ssh_password`}} scp -o 'StrictHostKeyChecking no' {{user `ssh_username`}}@{{user `ssh_host`}}:{{user `ssh_elasticsearch`}}/* /tmp",
      "sshpass -p {{user `ssh_password`}} scp -o 'StrictHostKeyChecking no' {{user `ssh_username`}}@{{user `ssh_host`}}:{{user `ssh_graphite`}}/* /tmp",
      "sshpass -p {{user `ssh_password`}} scp -o 'StrictHostKeyChecking no' {{user `ssh_username`}}@{{user `ssh_host`}}:{{user `ssh_icinga`}}/* /tmp"
      ]
    },
    {
      "type": "shell",
      "execute_command": "echo 'vagrant'|sudo -S sh '{{.Path}}'",
      "override": {
        "virtualbox-iso": {
          "scripts": [
            "scripts/base.sh",
	    "scripts/vagrant.sh",
            "scripts/elasticsearch.sh",
            "scripts/graphite.sh",
            "scripts/icinga.sh",
            "scripts/virtualbox.sh",
            "scripts/cleanup.sh"
          ]
        },
        "vmware-iso": {
          "scripts": [
            "scripts/base.sh",
            "scripts/vagrant.sh",
            "scripts/elasticsearch.sh",
            "scripts/graphite.sh",
            "scripts/icinga.sh",
            "scripts/vmware.sh",
            "scripts/cleanup.sh"
          ]
        }
      }
    }
  ],
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 40520,
      "guest_os_type": "RedHat_64",
      "http_directory": "http",
      "iso_checksum": "f21a71e8e31df73297bdd1ccd4a64a36831284bd",
      "iso_checksum_type": "sha1",
      "iso_url": "http://ftp.iij.ad.jp/pub/linux/centos/6.5/isos/x86_64/CentOS-6.5-x86_64-minimal.iso",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo '/sbin/halt -h -p' > /tmp/shutdown.sh; echo 'vagrant'|sudo -S sh '/tmp/shutdown.sh'",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "virtualbox_version_file": ".vbox_version",
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--memory", "2048" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "2" ]
      ]
    },
    {
      "type": "vmware-iso",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 40520,
      "guest_os_type": "centos-64",
      "http_directory": "http",
      "iso_checksum": "f21a71e8e31df73297bdd1ccd4a64a36831284bd",
      "iso_checksum_type": "sha1",
      "iso_url": "http://ftp.iij.ad.jp/pub/linux/centos/6.5/isos/x86_64/CentOS-6.5-x86_64-minimal.iso",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo '/sbin/halt -h -p' > /tmp/shutdown.sh; echo 'vagrant'|sudo -S sh '/tmp/shutdown.sh'",
      "tools_upload_flavor": "linux",
      "vmx_data": {
        "memsize": "2048",
        "numvcpus": "2",
        "cpuid.coresPerSocket": "1"
      }
    }
  ]
}
